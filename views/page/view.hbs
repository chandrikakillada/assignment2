<!-- views/salesData.hbs -->
{{!-- ... (other HTML and CSS code) ... --}}

<body>
    <h1>Sales Data</h1>
    <table>
        <tr>
            <!-- ... (table headers) ... -->
        </tr>
        {{#each salesData}}
            {{#if (neq this.Rating 0)}}
                <tr>
                    <td>
                        <img src="{{this.image}}" alt="{{this.name}}" onerror="this.src='/public/images/error.png'; this.alt='Image Error'">
                    </td>
                    <td>{{this.Invoice_ID}}</td>
                    <td>{{this.Branch}}</td>
                    <td>{{this.City}}</td>
                    <td>{{this.Customer_type}}</td>
                    <td>{{this.Product_line}}</td>
                    <td>{{this.name}}</td>
                    <td>${{this.Unit_price}}</td>
                    <td>{{this.Quantity}}</td>
                    <td>${{this.Total}}</td>
                    <td>{{this.Date}}</td>
                    <td>{{this.Time}}</td>
                    <td>{{this.Payment}}</td>
                    <td>${{this.cogs}}</td>
                    <td>${{this.gross_income}}</td>
                    <td>{{formatRating this.Rating}}</td>
                </tr>
            {{/if}}
        {{/each}}
    </table>
</body>
